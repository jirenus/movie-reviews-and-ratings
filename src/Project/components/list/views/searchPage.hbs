
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/"><i class="fa fa-home"></i> Home</a>
                    <a href="/categories">Search</a>
                    <span>{{description}}</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Product Section Begin -->
<section class="product-page spad">
    <div class="container">
        <div class="product__page__content">
            {{#if found}}
                <div class="product__page__title">
                    <div class="section-title">
                        <h4>Result for: {{description}}</h4>
                    </div>
                </div>
            {{else}}
                <div class="section-title">
                    <h4>Sorry, we can't find the film you need!!!</h4>
                </div>
            {{/if}}
            <div class="row">
                <!--movie start here-->
                {{#each searchList}}
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="product__item">
                            <a href="/movie/review/{{this._id}}"> <div class="product__item__pic set-bg" data-setbg="{{this.images.[0]}}">
                                <div class="ep">{{this.episode}}</div>
                                <div class="comment"><i class="fa fa-comments"></i> 11</div>
                                <div class="view"><i class="fa fa-eye"></i> 9141</div>
                            </div></a>
                            <div class="product__item__text">
                                <ul>
                                    <li>{{this.type}}</li>
                                    <li>{{this.genre}}</li>
                                </ul>
                                <h5><a href="/movie/review/{{this._id}}">{{this.movieName}}</a></h5>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->
